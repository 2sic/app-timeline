@inherits Custom.Hybrid.Razor12
@using ToSic.Razor.Blade;
@using System.Linq;
@{
  var milestones = AsList(Data).OrderByDescending(milestone => milestone.Date);
  var milestonesByYear = milestones.GroupBy(milestone => milestone.Date.ToString("yyyy"));
}

<div class="app-timeline app-timeline-@CmsContext.Module.Id">
  @foreach(var milestonesOfYear in milestonesByYear.ToList()) {
    var milestoneIndex = 0;
    <div class="app-timeline-head row col-xs-12 pb-md-4 justify-content-md-center">
      <div class="col-xs-4 pb-4 pb-md-0 col-md-2 app-timeline-milestone-center">
        <h2>@milestonesOfYear.Key</h2>
      </div>
    </div>
    
    foreach (var milestone in milestonesOfYear.ToList()) {
      milestoneIndex++;
      <div class='@((milestoneIndex % 2) == 0 ? "app-timeline-right" : "") row col-xs-12 align-items-md-center app-timeline-milestone pb-md-4 sc-element'>
        @Edit.Toolbar(milestone)

        <div class="col-xs-8 col-md-5 app-timeline-milestone-content">
          <h3>@milestone.Title</h3>
          <div class="app-timeline-content-date">
            @milestone.Date.ToString("dd. MMMM yyyy")
          </div>
          @Html.Raw(milestone.Text)
        </div>
        <div class="col-xs-4 col-md-2 pb-4 pb-md-0 app-timeline-milestone-center">
          <div class="app-timeline-img d-flex justify-content-center">
            <div class="app-timeline-img-wrapper @(Text.Has(milestone.Image) || Text.Has(milestone.Icon) ? " " : "app-timeline-circle")">
              @if(Text.Has(milestone.Image)) {
                <div class="app-timeline-img">
                  <img class="img-responsive img-circle" loading="lazy" src='@Link.Image(milestone.Image, width: 400, height: 400, resizeMode: "crop")' />
                </div>
              }
              @if(Text.Has(milestone.icon)) {
                <div class="app-timeline-icon-bg @(Text.Has(milestone.Image) ? "app-timeline-overlay" :"")">
                  <div class="app-timeline-icon">
                    <i class="fas @milestone.Icon"></i>
                  </div>
                </div>
              }
              @if(!Text.Has(milestone.icon) && !Text.Has(milestone.Image)) {
                <div class="app-timeline-empty">
                </div>
              }
            </div>
          </div>
        </div>
        <div class="col-xs-5 col-md-5 app-timeline-milestone-date">
          <div class='@((milestoneIndex % 2) == 0 ? "app-timeline-rightdate" : "") app-timeline-date'>
            @milestone.Date.ToString("dd. MMMM yyyy")
          </div>
        </div>
      </div>
    }
  }
</div>

@Html.Partial("_Timeline.PartAssets.cshtml")